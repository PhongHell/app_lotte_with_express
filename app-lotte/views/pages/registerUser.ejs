<%- include('../includes/head.ejs') %>
</head>

<body>
<main class="mb-4">
     <div class="mt-4">
         <h3 class="main-color p-2">LotteNows</h3>
     </div>
     <div class="container d-flex jus-center">
        <form action="/models/" method="POST" class="form-container body-container">
            <div class="align-center">
                <h3>LotteNows SignUp</h3>
                <div>
                    If you sign up now, you will receive 14-day free trial. <br>
                </div>
            </div>
            <div class="m-t-fixed">
                <label class="mb-1" for="user">User Name <b class="red-col">*</b></label>
                <input type="text" placeholder="User name" class="col-12 p-2 input-style" name="user"/>
            </div>
            <div class="m-t-fixed">
                <label class="mb-1" for="emailID">Email ID <b class="red-col">*</b></label>
                <input type="email" placeholder="Email" class="col-12 p-2 input-style" name="emailID"/>
            </div>
            <div class="m-t-fixed">
                <label class="mb-1" for="password">Password <b class="red-col">*</b></label>
                <input type="password" placeholder="Password" class="col-12 p-2 input-style" name="password"/>
            </div>
            <div class="m-t-fixed">
                <label class="mb-1" for="reType">Confirm Password <b class="red-col">*</b></label>
                <input type="password" placeholder="Confirm password" class="col-12 p-2 input-style" name="reType"/>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="align-center m-t-fixed">
			    <button class="btn btn-primary elementc btn-style bg-main bo-none">Sign Up</button>
            </div>
            <div class="align-center mt-2">
                <a href="/signin" class="style-link main-color"> You have a account, do you want sign in ? </a>
            </div>
        </form>
     </div>

</main>
<%- include('../includes/end.ejs') %>